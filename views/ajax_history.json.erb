<%
events = locals[:events]
rslt = {
    "iTotalRecords" => 999,
    "iTotalDisplayRecords" => "20"
}

rslt["aaData"] = events.map do |event|
    diff_list = "<ul>" + event.diffs.reduce("") {|old,d|; old + "<li>#{d}</li>"} + "</ul>"
    [
        event.datetime.strftime("%b %d %Y<br />%H:%M:%S%Z"),
        event.user,
        event.client,
        diff_list
    ]
end
%>
<%= rslt.to_json %>
