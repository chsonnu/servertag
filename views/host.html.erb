<%= erb "header.html".to_sym %>

<% tags = locals[:tags] %>
<body>
<div class="container-fluid">
<div class="content">
    <h1><%= locals[:hostname] %></h1>
    <br />
<%
if tags.empty?
    %>
        <div>No tags.</div>
<%
else
    %>
    <!-- Tags -->
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Tag</th>
            </tr>
        </thead>
<%
    tags.sort.each do |tag|
        %>
        <tr>
            <td><%= tag %></td>
        </tr>
<%
    end
    %>
    </table>
<%
end
%>
</div>
</div>
</body>

<%= erb "footer.html".to_sym %>
